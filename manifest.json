{
  "manifest_version": 2,

  "name": "Lorem Pastum",
  "description": "Paste Lorem Ipsum texts from Chrome's context menu",
  "version": "0.0.2",

  "permissions": 
  [
    "clipboardRead",
    "contextMenus"
  ],
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "contentscript.js" ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "img/icon-bitty.png",
    "48": "img/icon-small.png",
    "128": "img/icon-large.png"
  }
}